  <Model name="KingTiger">
    <!-- Используемая модель может содержать в себе как Shape, так и готовые Model -->
    <!-- Задать видимость частей для физики (главный конвейер обрабатывает только коробку, остальные части
    находятся в обработчике, когда происходит коллизия коробки с другими объектами - идет вызов
    обработчика и проверяются коллизии с остальными частями). -->
    <Pattern name="Tank"/><!-- Список наподобие как в Conveyer.xml -->
    <Hierarchy> <!-- Шаблон иерархии -->
      <Root name="Hull">
        <Property key="Model" value="Hull"/>
        <Position x="0" y="0" z="0"/>
        <Scale x="1" y="1" z="1"/>
        <Rotate x="0" y="0" z="0"/>
        <Slot name="Tower"> <!-- точка соединения -->
          <Position x="10" y="10" z="10"/>
          <Rotate x="0" y="0" z="0"/>
        </Slot>
        <Slot name="Chassis">
          <Position x="0" y="0" z="0"/>
          <Rotate x="0" y="0" z="0"/>
        </Slot>
      </Root>
      <Part name="Tower">
        <Property key="Model" value="Tower"/>
        <Position x="0" y="0" z="0"/>
        <Scale x="1" y="1" z="1"/>
        <Rotate x="0" y="0" z="0"/>
        <Plug part="Hull" slot="Tower">
          <Property key="Energy" value="10"/>
          <Constraint type="ConeTwist"> <!-- Как подсоединять -->
            <PointA x="0" y="0" z="0"/>
            <PointB x="0" y="0" z="0"/>
            <LimitAngle x="0" y="0" z="0"/>
          </Constraint>
        </Plug>
        <Slot name="Gun">
          <Position x="10" y="10" z="10"/>
          <Rotate x="0" y="0" z="0"/>
        </Slot>
      </Part>
      <Part name="Chassis">
        <Property key="Model" value="Chassis"/>
        <Plug where="Hull" slot="Chassis">
          <Property key="Energy" value="100"/>
          <Constraint type="Fixed">
            <PointA x="0" y="0" z="0"/>
            <PointB x="0" y="0" z="0"/>
          </Constraint>
        </Plug>
        <Position x="0" y="0" z="0"/>
        <Scale x="1" y="1" z="1"/>
        <Rotate x="0" y="0" z="0"/>
      </Part>
      <Part name="Gun">
        <Property key="Model" value="Gun"/>
        <Plug where="Tower" slot="Gun">
          <Property key="Energy" value="100"/>
          <Constraint type="ConeTwist">
            <PointA x="0" y="0" z="0"/>
            <PointB x="0" y="0" z="0"/>
            <LimitAngle x="0" y="0" z="0"/>
          </Constraint>
        </Plug>
        <Position x="0" y="0" z="0"/>
        <Scale x="1" y="1" z="1"/>
        <Rotate x="0" y="0" z="0"/>
      </Part>
    </Hierarchy>
  </Model>
